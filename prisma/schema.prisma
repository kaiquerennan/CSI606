// Prisma schema file
// Define os modelos Usuario e Vendas

generator client {
  provider = "prisma-client-js"
  output =   "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id     Int      @id @default(autoincrement())
  nome   String
  email  String   @unique
  vendas Vendas[] // Campo virtual para relação inversa
}

model Vendas {
  id        Int      @id @default(autoincrement())
  valor     Float
  data      DateTime @default(now())

  // Definição da relação (Foreign Key)
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

model Produto {
  id  Int             @id @default(autoincrement())
  descricao           String
  preco               Float
  grupo               String?
  estoque             Decimal     @db.Decimal(10,2)
}
